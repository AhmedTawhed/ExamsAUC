<body>
    <form asp-controller="Stud" asp-action="Result" method="post">
        <div class="container mt-7">
            <p><b>Answer The Following Questions :</b></p>
            @{var count = 1;}
            @foreach (var item in Model)
            {
                <p>Question @(
                            count++
                            ) :</p>
                <label asp-for="@item.Title">@item.Title</label>
                @if (item.QuestionType == "MCQ" || item.QuestionType == "TrueFalse")
                {
                    <select name="optionsId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                        @foreach (var option in item.Options)
                        {
                            <option value="@option.Id">@option.Title</option>
                        }
                    </select>
                }
                else if (item.QuestionType == "MissingWord")
                {
                    <input name="answers" type="text" class="form-control form-control-solid mt-3" placeholder="Enter the missing word" value="">
                }   
                else if (item.QuestionType == "Essay")
                {
                    <input name="answers" type="text" class="form-control form-control-solid mt-3" placeholder="Enter the essay answer" value="">
                }

            }
            <input type="hidden" name="examId" value="@ViewBag.examId" />

            <div class="col-3">
                <button type="submit" class="btn btn-dark mt-3 animate-up-2">
                    Submit
                </button>
            </div>
        </div>
    </form>



