@model IEnumerable<MVCExamProject.Models.Exam>

@{
    ViewData["Title"] = "Take Exam";
}
<!DOCTYPE html>
<html lang="en">

<head>
   
</head>

<body>
  

    @foreach (var exam in Model){
    <div class="container mt-4 position-relative">
        <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">

                <div class="position-relative">
                
                <a asp-action="ExamQuestions" asp-controller="Stud" asp-route-id="@exam.Id"
                       style="width:500px"
                       class="btn btn-dark mt-3 animate-up-2">
                        @exam.Name
                    </a>
                </div>
                <br />
                <br />
            
        </div>
       
    </div>
    }

</body>

</html>